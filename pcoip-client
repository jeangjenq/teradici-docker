#!/bin/sh

configdir=${XDG_CONFIG_HOME:-/home/$LOGNAME/.config/}

docker run --rm \
	--name pcoip-client \
	--privileged \
	--cap-add=NET_ADMIN \
	--device /dev/net/tun \
	-e DISPLAY="$DISPLAY" \
	-e LOGNAME="$LOGNAME" \
	-v "${configdir}":"${configdir}" \
	-v /tmp/.X11-unix:/tmp/.X11-unix \
	-v /etc/localtime:/etc/localtime \
	--network host \
	pcoip-client
